
<div class="container" style="margin-top: 140px; margin-bottom: 30px; margin-left: 80px;">
  <h1>Your Cart</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Item's Name</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Update</th>
    </tr>
  </thead>
  <tbody>
    <% @cart.cart_items.each do |cart_item| %>
    <tr>
      <th scope="row"><%= cart_item.item.name %></th>
      <td><%= cart_item.item.price %></td>
      <td><%= cart_item.quantity %></td>
      <td><%= link_to "Delete", cart_item_path(cart_item), method: :delete %></td>
      <td><%= link_to "Add", add_to_cart_path(cart_item.item_id) %></td>
      <td><%= link_to "Minus", minus_from_cart_path(cart_item.item_id) %></td>
    <% end %>
    </tr>
     <%= render 'carts/partials/total'%>
  </tbody>
</table>
<%= form_for(@order) do |f| %>
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>
