<div class="container" style="margin-top: 120px; margin-bottom: 30px;">
<div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="row">
           <div class="col-12">
            <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
              <li class="nav-item" style="padding: 3px;">
                <a class="nav-link active" id="basicInfo-tab" data-toggle="tab" href="#basicInfo" role="tab" aria-controls="basicInfo" aria-selected="true">Info</a>
              </li>
              <li class="nav-item" style="padding: 3px;">
                <a class="nav-link active" id="basicInfo-tab" data-toggle="tab" href="#basicInfo" role="tab" aria-controls="basicInfo" aria-selected="true">
                <%= link_to "Edit", edit_address_path(@address) %></a>
              </li>
              <li class="nav-item" style="padding: 3px;">
                <a class="nav-link active" id="basicInfo-tab" data-toggle="tab" href="#basicInfo" role="tab" aria-controls="basicInfo" aria-selected="true">
                <%= link_to "Delete", @address, method: :delete,
                                  data: { confirm: "You sure?" } %></a>
              </li>
          </ul>



<div class="row">
  <div class="col-sm-3 col-md-2 col-5">
    <label style="font-weight:bold;">Street Address</label>
  </div>
  <div class="col-md-8 col-6">
    <%= @address.street_address %>
  </div>
</div>
<hr />
<div class="row">
  <div class="col-sm-3 col-md-2 col-5">
    <label style="font-weight:bold;">Unit Type</label>
  </div>
  <div class="col-md-8 col-6">
    <%= @address.unit_type %>
  </div>
</div>
<hr />
<div class="row">
  <div class="col-sm-3 col-md-2 col-5">
    <label style="font-weight:bold;">City</label>
  </div>
  <div class="col-md-8 col-6">
    <%= @address.city %>
  </div>
</div>
<hr />
<div class="row">
  <div class="col-sm-3 col-md-2 col-5">
    <label style="font-weight:bold;">State</label>
  </div>
  <div class="col-md-8 col-6">
    <%= @address.state %>
  </div>
</div>
<hr />

<div class="row">
  <div class="col-sm-3 col-md-2 col-5">
    <label style="font-weight:bold;">Zip Code</label>
  </div>
  <div class="col-md-8 col-6">
    <%= @address.zipcode %>
  </div>
</div>
<hr />
</div>