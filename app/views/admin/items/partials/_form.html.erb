<%= simple_form_for(@item, url: yield(:path)) do |f| %>
<div class="container" style="margin-top: 140px; margin-bottom: 40px;">
  <div class="row">
    <div class="form-group col-md-10">
      <%= f.input :name, placeholder: "Type item's name" %>
    </div>
    <div class="form-group col-md-10">
      <%= f.input :description, as: :text %>    
    </div>
    <div class="form-group col-md-3">
      <%= f.input :price %>
    </div>
    <div class="clearfix"></div>
    <div class="form-group col-md-2">
      <%= f.input :menu_type, as: :select, :collection => Item.menu_types.keys.to_a %>    
    </div>
    <%= f.input :section, as: :select, :collection => Item.sections.keys.to_a %>
    <div class="form-group col-md-3">
      <%= f.input :availability, as: :radio_buttons %><br>
    </div>
    <div class="clearfix"></div>
    <%= f.submit yield(:button_text), class: 'btn btn-primary btn-block'%>
  </div>
</div>
<% end %>