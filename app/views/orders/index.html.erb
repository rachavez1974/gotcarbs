<div class="container" style="padding-bottom: 100px; margin-top: 140px;">
  <%= will_paginate(:renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
    <h1>Orders for <%= current_user.first_name %></h1>
      <ul>
        <% @orders.each do |order| %>
          <div class="container">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Order#</th>
                  <th>Date Created</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= link_to order.id, order_path(order) %></td>
                  <td><%= order.created_at.strftime("%B %d, %Y")%></td>
                  <td>$<%= order.total%></td>
                </tr>
              </tbody>
            </table>
          </div>
        <% end %>
      </ul>
  <%= will_paginate(:renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
</div>
